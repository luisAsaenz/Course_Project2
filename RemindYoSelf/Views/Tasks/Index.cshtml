@model IEnumerable<RemindYoSelf.Models.TaskViewModel>

@{
    ViewData["Title"] = "Index";
}
    <center>
    <h1 style="font-family:Jokerman">@ViewBag.message</h1>
    </center>
    <h1 style="font-family:Jokerman">All Task</h1>
<style>
    #namas, #namas2 {
        color: black;
    }
</style>
<p>
    <a asp-action="Create" type ="button" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>

<table id="tableData" class="table">
    <thead>
        <tr id="namas">
            <th>
                Title
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks)
            </th>
            <th>
                Task Due
            </th>
            <th>
                Catagory
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="namas2">
                <td>
                    @Html.DisplayFor(modelItem => item.TaskTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskTypeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TaskId" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.TaskId" class="btn btn-primary"> <i class="fa fa-info" aria-hidden="true"></i> Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.TaskId" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger"> <i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
